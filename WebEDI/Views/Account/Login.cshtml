@using WebEDI.Respository.ViewModels
@model LoginModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #formlogin .error {
            color: red;
        }
    </style>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
    <link href="~/lib/jquery-confirm/dist/jquery-confirm.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/fontawesome-free-5.11.2-web/js/all.js"></script>
    <script src="~/lib/jquery-confirm/dist/jquery-confirm.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/Account.js"></script>
</head>
<body>
    <div class="container">
        <div class="webediheader">
            <nav class="navbar navbar-expand-sm navbar-collapse">
                <div class="col-3 d-flex justify-content-start p-3">
                    協立エアテック　WebEDIシステム                    
                </div>
            </nav>
        </div>
        <div class="edicontainer">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>ログイン></h3>
                    </div>
                    <div class="card-body">
                        <form action="/Account/Login" method="post" id="formlogin">
                            @Html.AntiForgeryToken()
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">会社コード</span>
                                </div>
                                <input type="text" style="min-width:250px" required name="CompanyCode" class="form-control" placeholder="">
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">ユーザID</span>
                                </div>
                                <input type="text" style="min-width:250px" required name="UserName" class="form-control" placeholder="">
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">パスワード</span>
                                </div>
                                <input type="password" style="min-width:250px" required name="PassWord" class="form-control" placeholder="">
                            </div>
                            <div class="form-group">
                                <input type="button" id="btnSubmit" value="ログイン" class="btn float-right login_btn">
                                <label id="model-error" class="error"></label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>

</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        Account.Init();
    });

</script>